<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Books |Fiction & Non Fiction</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="row mt-3">
        <h2 class="text-center">Books Collections</h2>
        <form action="/new" method="get">
          <button class="btn btn-success my-3">Add</button>
        </form>

        <% for( books of allBooks){ %>
        <div class="card m-3 bg-light" style="width: 18rem">
          <div class="card-body">
            <h5 class="card-title text-center"><%= books.book_Name%></h5>
            <p class="card-text text-center"><%= books.author %></p>
            <img
              src="<%= books.Image.url %>"
              alt=""
              style="width: 100%; max-height: 16rem"
            />
            <p class="card-text my-1">Publish Date :<%= books.Publish_Date %></p>
            <p class="card-text">Price : &#8377; <%= books.price %></p>
            <div class="d-flex mb-3">
              <form
                action="<%=books._id%>/edit"
                method="get"
                enctype="multipart/form-data"
                class="me-4"
              >
                <button class="btn btn-warning">Edit</button>
              </form>
              <form
                action="<%=books._id%>/delete?_method=DELETE"
                method="post"
                enctype="multipart/form-data"
              >
                <button class="btn btn-danger" onclick="Deleted()">
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const Deleted = () => {
        Swal.fire({
  title: "Are you sure?",
  text: "Do you want to Delete it",
  icon: "warning",
  showCancelButton: true,
  confirmButtonColor: "#3085d6",
  cancelButtonColor: "#d33",
  confirmButtonText: "Yes"
}).then((result) => {
  if (result.isConfirmed) {
    Swal.fire({
      title: "Deleted!",
      text: "Your Book has been deleted.",
      icon: "success"
    });
  }
});
      };
    </script>
  </body>
</html>
